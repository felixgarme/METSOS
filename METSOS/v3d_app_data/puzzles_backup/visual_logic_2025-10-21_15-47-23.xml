                      <field name="TEXT" editor-height="21" editor-width="762.5">const camera = app.camera;&amp;#10;const controls = app.controls;&amp;#10;&amp;#10;// Si el control tiene 'target', lo usamos; si no, usamos un punto fijo al frente de la cámara&amp;#10;let target;&amp;#10;if (controls &amp;&amp; controls.target) {&amp;#10;    target = controls.target.clone();&amp;#10;} else {&amp;#10;    // Crea un punto frente a la cámara a 10 unidades de distancia&amp;#10;    const forward = new THREE.Vector3();&amp;#10;    camera.getWorldDirection(forward);&amp;#10;    target = camera.position.clone().add(forward.multiplyScalar(10));&amp;#10;}&amp;#10;&amp;#10;// Calculamos la dirección y distancia&amp;#10;const distance = camera.position.distanceTo(target);&amp;#10;const dir = camera.position.clone().sub(target).normalize();&amp;#10;&amp;#10;// Rotamos 180° en el eje Y&amp;#10;const quaternion = new THREE.Quaternion();&amp;#10;quaternion.setFromAxisAngle(new THREE.Vector3(0, 1, 0), Math.PI);&amp;#10;&amp;#10;const newDir = dir.clone().applyQuaternion(quaternion);&amp;#10;const newPos = target.clone().add(newDir.multiplyScalar(distance));&amp;#10;&amp;#10;// Aplicamos el cambio&amp;#10;camera.position.copy(newPos);&amp;#10;camera.lookAt(target);&amp;#10;&amp;#10;if (controls &amp;&amp; controls.update) controls.update();&amp;#10;</field>
